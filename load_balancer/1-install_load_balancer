#!/usr/bin/env bash
# Script to install and configure HAProxy as a load balancer for web-01 and web-02

# Update and install required packages
sudo apt-get update -y
sudo apt-get install -y haproxy

# Enable HAProxy
echo "ENABLED=1" | sudo tee -a /etc/default/haproxy

# Backup existing HAProxy config
sudo cp /etc/haproxy/haproxy.cfg /etc/haproxy/haproxy.cfg.bak

# Configure HAProxy
sudo tee /etc/haproxy/haproxy.cfg > /dev/null <<EOF
global
    log /dev/log local0
    log /dev/log local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

defaults
    log global
    option httplog
    option dontlognull
    timeout connect 5000ms
    timeout client 50000ms
    timeout server 50000ms

frontend http_front
    bind *:80
    default_backend http_back

backend http_back
    balance roundrobin
    server 6383-web-01 3.89.108.224:80 check
    server 6383-web-02 54.152.78.172:80 check
EOF

# Restart HAProxy service
sudo systemctl restart haproxy
sudo systemctl enable haproxy

# Allow HTTP traffic through firewall
sudo ufw allow 80/tcp
